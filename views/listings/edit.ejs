<% layout("/layouts/boilerplate") %> 
<div class="row">
  <div class="col-8 offset-2">
    <h3 class="mb-3">Edit a Listings</h3>
    <form 
         method="POST" 
         action="/listings/<%= listing._id %>?_method=PUT"
         novalidate 
         class="needs-validate"
        >
       <div class="mb-3">
           <label for="title" class="form-label">Title</label>
           <input 
              name="listing[title]" 
              value="<%= listing.title %> " 
              type="text" 
              class="form-control"
              required
            >
            <div class="invalid-feedback">
                Please enter a valid title.
              </div>
       </div>
        <div class="mb-3">
            <label for="title" class="form-label">Description</label>
            <textarea 
               name="listing[description]" 
               type="text" 
               class="form-control"
               required
            ><%= listing.description %></textarea>
        </div>
        <div class="mb-3">
            <label for="title" class="form-label">Image</label>
            <input 
               name="listing[image]"  
               value="<%= listing.image %> " 
               type="text" 
               class="form-control"
               required
            >
            <div class="invalid-feedback">
                Please enter a valid Image.
            </div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="title" class="form-label">Price</label>
                <input 
                   name="listing[price]" 
                   value="<%= listing.price %> " 
                   type="text" 
                   class="form-control"
                   required
                >
                <div class="invalid-feedback">
                    Please enter a valid Price.
                </div>
            </div>
            <div class="mb-3 col-md-8 ">
                <label for="title" class="form-label">Country</label>
                <input 
                   name="listing[country]" 
                   value="<%= listing.country %> " 
                   type="text" 
                   class="form-control"
                   required
                >
                <div class="invalid-feedback">
                    Please enter a valid Country.
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="title" class="form-label">Location</label>
            <input 
                 name="listing[location]" 
                 value="<%= listing.location %> " 
                 type="text" 
                 class="form-control"
                 required
            >
            <div class="invalid-feedback">
                Please enter a valid Locatiom.
            </div>
        </div>
        <button class="btn btn-dark add-btn my-3">Edit</button>
    </form>
 </div>
</div>