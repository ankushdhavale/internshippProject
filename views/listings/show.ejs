<% layout("/layouts/boilerplate") %> 


<div class="row">
   <div class="col-8 offset-3 ">
      <h3><%= listing.title %> </h3>
   </div> 
      <div class="card col-6 offset-3 ">
         <img src="<%= listing.image %>" class="card-img-top-show show-img" alt="listing_image">
         <div class="card-body">
           <p class="card-text mt-1">
             <%= listing.description %> <br>
             <%= listing.price.toLocaleString("en-IN") %> <br>
             <p class="text-secondary"><span class="text-dark">Skills :- </span> <%= listing.skills %></p> <br>
             <span class="text-dark">Location :-</span><%= listing.location %> 
           </p>
         </div>
       </div>
      <br>
      <button class="btn btn-info col-6 offset-3 mb-4">
         <a href="<%= listing.companyUrl %>"
            class="apply-btn"
            role="button"
            >Apply</a>
      </button>
 </div>
 <div class="btns mb-3">
   <a 
      href="/listings/<%= listing._id %>/edit" 
      class="btn btn-dark col-1 offset-3 add-btn"
   > Edit </a>


   <form method="POST" action="/listings/<%= listing._id %>/?_method=DELETE">
      <button class="btn btn-dark offset-5 ">Delete</button>
   </form>
</div>



